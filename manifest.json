{
  "manifest_version": 3,
  "name": "Chitti ‚Äî Colab Companion",
  "version": "1.0.0",
  "description": "A mischievous cockatiel companion for Google Colab üê¶üß° ‚Äî with more pets coming soon!",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.quotable.io/*",
    "https://www.affirmations.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://colab.research.google.com/*",
        "http://localhost:8888/*",
        "http://localhost:8889/*",
        "http://localhost:8890/*",
        "https://*.jupyter.org/*",
        "https://*.jupyterhub.com/*"
      ],
      "css": ["content/mango.css"],
      "js": ["content/mango.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/*"],
      "matches": [
        "https://colab.research.google.com/*",
        "http://localhost:8888/*",
        "http://localhost:8889/*",
        "http://localhost:8890/*",
        "https://*.jupyter.org/*",
        "https://*.jupyterhub.com/*"
      ]
    }
  ]
}
